            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="地区"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/profile_region_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="未填写"
                    android:textSize="16sp"
                    android:textColor="#999" />
            </RelativeLayout>
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ddd"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="个性签名"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/profile_sign_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="#999" />
            </RelativeLayout>

            <Button
                android:id="@+id/profile_kicktoblack_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_zhuce"
                android:gravity="center"
                android:padding="4dp"
                android:text="拉入黑名单"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/profile_removefromblack_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_zhuce"
                android:gravity="center"
                android:padding="4dp"
                android:text="移除黑名单"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/profile_addfriend_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/btn_denglu"
                android:gravity="center"
                android:padding="4dp"
                android:text="加为好友"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/profile_sendmsg_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/btn_denglu"
                android:gravity="center"
                android:padding="4dp"
                android:text="发送消息"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/profile_removefriend_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/btn_del"
                android:gravity="center"
                android:padding="4dp"
                android:text="移除好友"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>